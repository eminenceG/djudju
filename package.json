  },
  "homepage": "https://github.com/chatie/heroku-wechaty-getting-started#readme",
  "dependencies": {
    "@types/hapi": "^17.0.12",
    "@types/lru-cache": "^4.1.1",
    "@types/node": "^10.5.6",
    "@types/raven": "^2.5.1",
    "@types/read-pkg-up": "^3.0.1",
    "@types/request": "^2.47.1",
    "axios": "^0.18.0",
    "brolog": "^1.6.5",
