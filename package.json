    }
  },
  "devDependencies": {
    "@types/blue-tape": "^0.1.32",
    "@types/sinon": "^5.0.1",
    "blue-tape": "^1.0.0",
    "git-scripts": "^0.2.1",
    "sinon": "^6.1.4",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0"
